!src/backend_api/app/__init__.py
!src/backend_api/Dockerfile
!src/backend_api/requirements.txt
!src/backend_api/setup.py

#helm files
!helm/
!helm/backend
!helm/backend/templates
!helm/frontend
!helm/frontend/templates
!helm/kafka
!helm/kafka/Dockerfile.connect
!helm/mongodb
!helm/mongodb/mongo-sink.json
